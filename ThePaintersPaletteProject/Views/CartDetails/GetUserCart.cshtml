@model ShoppingCart
@{﻿
    ViewData["Title"] = "GetUserCart";
}
<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Category</th>
                <th>Unit Price(INR)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.ArtPiece.ArtTitle</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.ArtPiece.Image))
                        {
                            <img src="/images/NoImage.png" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="/images/@item.ArtPiece.Image" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@item.ArtPiece.Category.CategoryName</td>
                    <td>@item.ArtPiece.Price X @item.Quantity</td>
                    <td>@(item.ArtPiece.Price * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/CartDetails/AddItem?ArtId=@item.ArtId&&redirect=1">+</a>
                        <a class="btn btn-info" href="/cartDetails/removeitem?ArtId=@item.ArtId">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(INR): </h5>
            @(Model.CartDetails.Select(item => item.ArtPiece.Price * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/CartDetails/Checkout">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>
